<p id="notice"><%= notice %></p>

<h1>Listing Animes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mal</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.name %></td>
        <td><%= anime.mal_id %></td>
        <td><%= raw anime.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
        <td><%= link_to 'Show', anime %></td>
        <!-- old: "#{animes_path}/#{anime.name}" -->
        <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
        <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

